@{
    ViewBag.Title = "Cadastrar";
}

<h2>Cadastro de Clientes</h2>

@if (TempData["msg"] != null)
{
    <div class="alert alert-success">
        @TempData["msg"]
    </div>
}


@using (Html.BeginForm())
{
    <div class="form-group">
        @Html.LabelFor(c => c.Nome)
        @Html.TextBoxFor(cli => cli.Nome, new { placeholder = "Digite seu nome", @class = "form-control" })
        @Html.TextBoxFor(cli => cli.Nome, new { placeholder = "Digite seu nome", @class = "form-control"})
    </div>

    <div class="form-group">
        @Html.LabelFor(c => c.Idade)
        @Html.TextBoxFor(c => c.Idade, new { placeholder = "Digite sua idade", @class = "form-control" })
    </div>


    <div class="form-group">
        @Html.LabelFor(c => c.Credito)
        @Html.TextBoxFor(c => c.Credito, new { placeholder = "Digite seu crédito", @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(c => c.EstadoCivil)

        @Html.DropDownListFor(c => c.EstadoCivil, ViewBag.estados as SelectList, new { @class = "form-control" })


        <br />
        <label>@Html.RadioButtonFor(c => c.EstadoCivil, "Solteiro") Solteiro</label>
        <label>@Html.RadioButtonFor(c => c.EstadoCivil, "Casado" ) Casado</label> 
        <label>@Html.RadioButtonFor(c => c.EstadoCivil, "Separado" ) Separado</label>
        <label>@Html.RadioButtonFor(c => c.EstadoCivil, "Divorciado" ) Divorciado</label>
        <label>@Html.RadioButtonFor(c => c.EstadoCivil, "Viúvo" ) Viúvo</label>

    </div>

    <div class="form-group">
        @Html.LabelFor(c => c.DataNascimento)
        @Html.TextBoxFor(c => c.DataNascimento, new { @type = "date", @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.CheckBoxFor(c => c.NecessidadesEspeciais)
        @Html.LabelFor(c => c.NecessidadesEspeciais)
    </div>
    <div class="form-group">

        @Helper.Submit("Salvar", "btn btn-primary")
    </div>

}
